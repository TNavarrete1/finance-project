<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <!--CSS and Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@200;300;400;500;600;700;800;900&family=Rubik:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/root.css" />
    <link rel="stylesheet" href="/styles/dashboard.css" />
    <script
      src="https://kit.fontawesome.com/ebd4c0f83f.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body data-page="dashboard">
    <div id="layout">
      <header id="layout-header">
        <a href="/" id="logo">Home</a>
        <div id="header-container">
          <h1 id="header-text">Welcome back, <%- user.firstName %></h1>
          <div id="searchbar">
            <i class="fa-solid fa-magnifying-glass"></i>
            <label for="search-input"></label>
            <input
              type="text"
              id="search-input"
              name="search_input"
              placeholder="Search Here..."
            />
          </div>
          <div id="header-options">
            <div id="data-filter">
              <i class="fa-regular fa-calendar"></i>
              <div id="filter-picker">
                <span id="filter-text">7 days</span>
                <i class="fa-solid fa-chevron-down"></i>
              </div>
            </div>
            <div class="themes">
              <span class="theme-toggle"></span>
              <i class="fa-solid fa-sun"></i>
              <i class="fa-solid fa-moon"></i>
            </div>
            <div class="circle-options">
              <i class="fa-solid fa-message"></i>
            </div>
            <a href="/logout" class="circle-options">
              <i class="fa-solid fa-arrow-right-from-bracket"></i>
            </a>
          </div>
        </div>
      </header>
      <div id="sidebar">
        <div
          id="dashboard"
          class="sidebar-icon sidebar-icon-active"
          data-panel="1"
        >
          <i class="fa-solid fa-gauge"></i>
        </div>
        <div id="savings-list" class="sidebar-icon" data-panel="2">
          <i class="fa-solid fa-receipt"></i>
        </div>
        <div id="savings-goals" class="sidebar-icon" data-panel="3">
          <i class="fa-solid fa-piggy-bank"></i>
        </div>
        <div id="account" class="sidebar-icon" data-panel="4">
          <i class="fa-solid fa-wallet"></i>
        </div>
        <div id="settings" class="sidebar-icon" data-panel="5">
          <i class="fa-solid fa-gear"></i>
        </div>
      </div>
      <div id="panel-1" class="panel panel-open">panel 1</div>
      <div id="panel-2" class="panel">panel 2</div>
      <div id="panel-3" class="panel">panel 3</div>
      <div id="panel-4" class="panel">panel 4</div>
      <div id="panel-5" class="panel">panel 5</div>
    </div>
    <script type="module" src="/src/shared.js"></script>
    <script type="module" src="/src/dashboard.js"></script>
  </body>
</html>
